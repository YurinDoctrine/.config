conky.config = {
-- conky configuration
--
-- The list of variables has been removed from this file in favour
-- of keeping the documentation more maintainable.
-- Check http://conky.sf.net for an up-to-date-list.
--
-- For ideas about how to modify conky, please see:
-- http://conky.sourceforge.net/variables.html
--
-- For help with conky, please see:
-- http://conky.sourceforge.net/documentation.html
--
-- Enjoy! :)
--##############################################
--# Settings
--##############################################
	background = true,
	use_xft = true,
	font = 'Liberation Sans:size=10',
	xftalpha = 1,
	update_interval = 3.0,
	total_run_times = 0,
	own_window = true,
	own_window_transparent = true,
	own_window_type = 'desktop',
--own_window_argb_visual yes
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	double_buffer = true,
	minimum_width = 200, minimum_height = 200,
	maximum_width = 240,
	draw_shades = false,
	draw_outline = false,
	draw_borders = false,
	draw_graph_borders = false,
	default_color = '#656667',
	default_shade_color = '#000000',
	default_outline_color = '#828282',
	alignment = 'top_right',
	gap_x = 12,
	gap_y = 56,
	no_buffers = true,
	uppercase = false,
	cpu_avg_samples = 2,
	override_utf8_locale = false,
--##############################################
--#  Output
--##############################################
};

conky.text = [[
Host:$alignr$nodename
Distro:${offset 2$}${alignr}$sysname ${alignr}${execi 6000 lsb_release -a | grep 'Description'|awk {'print $3, $4, $5'}}
Kernel:${alignr}${exec uname} ${exec uname -r}${voffset 5$}
S Y S T E M$alignr$uptime
${hr}
RAM:$alignr$mem/$memmax
Swap:$alignr$swap/$swapmax
Battery:$alignr${battery_percent BAT1}%
Disk usage:$alignr${fs_used /}/${fs_size /}
CPU usage:$alignr${cpu cpu0}%
CPU temp:$alignr${hwmon 0 temp 1}`C
CPU freq:$alignr${freq}MHz${voffset 5$}
Top Processes${voffset 1$}
  1${offset 2$}-  ${top name 1}
  2${offset 2$}-  ${top name 2}
  3${offset 2$}-  ${top name 3}
  4${offset 2$}-  ${top name 4}
  5${offset 2$}-  ${top name 5}${voffset 10$}
N E T W O R K
${hr}
Up:${offset 27$}${upspeed wlo1}${alignr}${upspeedgraph wlo1 8,100}
Down:${offset 10$}${downspeed wlo1}${alignr}${downspeedgraph wlo1 8,100}${voffset 10$}
K E Y B I N D S
${hr}
Super${offset 2$}+r$alignr Run Dialog
Super${offset 2$}+d$alignr Alt Menu
Super${offset 2$}+Space$alignr Main Menu
Super${offset 2$}+Tab$alignr Client Menu
Super${offset 2$}+t$alignr Terminal Emulator
Super${offset 2$}+f$alignr File Manager(ranger)
Super${offset 2$}+e$alignr Editor
Super${offset 2$}+m$alignr Media Player
Super${offset 2$}+w$alignr Web Browser
Super${offset 2$}+h$alignr Task Manager
Super${offset 2$}+l$alignr Lock Screen
Super${offset 2$}+Esc$alignr Show Desktop
Super${offset 2$}+x$alignr Exit Dialog
PrtSc$alignr Screenshot
]];
