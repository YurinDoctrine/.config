#!/usr/bin/env bash

if ! . cbpp-include.cfg 2>/dev/null; then
	echo '  Failed to locate cbpp-include.cfg in PATH' >&2
	exit 1
fi

if [[ $1 = '--dialog' ]]; then

	dialog=$(echo -e "[ Cancel ]\nLogout\nReboot\nShutdown\nSuspend" | dmenu -i -b -nb '#151617' -nf '#d8d8d8' -sb '#d8d8d8' -sf '#151617')
	if [[ $dialog = "Logout" ]]; then
		openbox --exit
	elif [[ $dialog = "Reboot" ]]; then
		$(cbpp-gksudo xterm -e "shutdown -r now")
	elif [[ $dialog = "Shutdown" ]]; then
		$(cbpp-gksudo xterm -e "shutdown now")
	elif [[ $dialog = "Suspend" ]]; then
		$(cbpp-gksudo xterm -e "suspend")
	fi
else
	# Output Openbox menu
	menuStart
	menuItem 'Logout' 'openbox --exit'
	menuItem 'Reboot' '$(cbpp-gksudo xterm -e "shutdown -r now")'
	menuItem 'Shutdown' '$(cbpp-gksudo xterm -e "shutdown now")'
	menuItem 'Suspend' '$(cbpp-gksudo xterm -e "suspend")'
	menuEnd
fi
exit 0
