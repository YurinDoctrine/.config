<?xml version='1.0' encoding='utf-8'?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///usr/share/openbox/menu.xsd">
    <menu id="root-menu" label="Openbox 3">
        <item label="Run Program">
            <action name="Execute">
                <execute>gmrun</execute>
            </action>
        </item>
        <separator />
        <item label="Terminal Emulator">
            <action name="Execute">
                <execute>kitty</execute>
            </action>
        </item>
        <item label="Web Browser">
            <action name="Execute">
                <execute>x-www-browser</execute>
            </action>
        </item>
        <item label="File Manager">
            <action name="Execute">
                <execute>pcmanfm-qt</execute>
            </action>
        </item>
        <item label="Text Editor">
            <action name="Execute">
                <execute>featherpad</execute>
            </action>
        </item>
        <item label="Media Player">
            <action name="Execute">
                <execute>vlc</execute>
            </action>
        </item>
        <separator />
        <menu id="accessories" label="Accessories">
            <item label="Archive Manager">
                <action name="Execute">
                    <execute>engrampa</execute>
                </action>
            </item>
            <item label="Terminal Emulator (root)">
                <action name="Execute">
                    <execute>cbpp-gksudo kitty</execute>
                </action>
            </item>
            <item label="File Manager (root)">
                <action name="Execute">
                    <execute>cbpp-gksudo pcmanfm-qt</execute>
                </action>
            </item>
        </menu>
        <menu id="graphics" label="Graphics">
            <item label="Pinta">
                <action name="Execute">
                    <execute>pinta</execute>
                </action>
            </item>
            <item label="Viewnior Image Viewer">
                <action name="Execute">
                    <execute>viewnior</execute>
                </action>
            </item>
            <item label="SimpleScreenRecorder">
                <action name="Execute">
                    <execute>simplescreenrecorder --start-hidden</execute>
                </action>
            </item>
            <separator label="Screenshooter" />
            <item label="Now">
                <action name="Execute">
                    <execute>scrot '%Y-%m-%d--%s_$wx$h_scrot.png' -e 'mv $f ~/Pictures/ &amp;amp; viewnior ~/Pictures/$f'</execute>
                </action>
            </item>
            <item label="In 5 Seconds...">
                <action name="Execute">
                    <execute>scrot -d 5 '%Y-%m-%d--%s_$wx$h_scrot.png' -e 'mv $f ~/Pictures/ &amp;amp; viewnior ~/Pictures/$f'</execute>
                </action>
            </item>
            <item label="In 10 Seconds...">
                <action name="Execute">
                    <execute>scrot -d 10 '%Y-%m-%d--%s_$wx$h_scrot.png' -e 'mv $f ~/Pictures/ &amp;amp; viewnior ~/Pictures/$f'</execute>
                </action>
            </item>
            <item label="Selected Area... (click &amp; drag mouse)">
                <action name="Execute">
                    <execute>scrot -s '%Y-%m-%d--%s_$wx$h_scrot.png' -e 'mv $f ~/Pictures/ &amp;amp; viewnior ~/Pictures/$f'</execute>
                </action>
            </item>
        </menu>
        <menu id="multimedia" label="Multimedia">
            <item label="AlsaPlayer">
                <action name="Execute">
                    <execute>alsaplayer</execute>
                </action>
            </item>
            <item label="VLC Media Player">
                <action name="Execute">
                    <execute>vlc</execute>
                </action>
            </item>
            <item label="Volume Control">
                <action name="Execute">
                    <execute>pavucontrol-qt</execute>
                </action>
            </item>
        </menu>
        <menu id="network" label="Network">
            <item label="Filezilla">
                <action name="Execute">
                    <execute>filezilla</execute>
                </action>
            </item>
            <item label="Transmission BitTorrent Client">
                <action name="Execute">
                    <execute>transmission-gtk</execute>
                </action>
            </item>
            <item label="IRC Client">
                <action name="Execute">
                    <execute>kitty irssi</execute>
                </action>
            </item>
        </menu>
        <menu id="office" label="Office">
            <item label="Google Docs">
                <action name="Execute">
                    <execute>x-www-browser https://drive.google.com/</execute>
                </action>
            </item>
            <item label="AbiWord Word Processor">
                <action name="Execute">
                    <execute>abiword</execute>
                </action>
            </item>
            <item label="Gnumeric Spreadsheet">
                <action name="Execute">
                    <execute>gnumeric</execute>
                </action>
            </item>
            <item label="Calculator">
                <action name="Execute">
                    <execute>kitty bc -q</execute>
                </action>
            </item>
            <item label="Atril PDF Viewer">
                <action name="Execute">
                    <execute>atril</execute>
                </action>
            </item>
        </menu>
        <separator />
        <menu execute="cbpp-places-pipemenu" id="pipe-placesmenu" label="Places" />
        <menu execute="cbpp-recent-files-pipemenu" id="pipe-recentfilesmenu" label="Recent Files" />
        <separator />
        <menu id="settings" label="Settings">
            <menu execute="cbpp-compositor" id="CompositingPipeMenu" label="Compositor" />
            <menu id="conkyconfig" label="Conky">
                <item label="Edit .conkyrc">
                    <action name="Execute">
                        <execute>cbpp-gksudo kitty nvim ~/.conkyrc</execute>
                    </action>
                </item>
                <item label="Restart Conky">
                    <action name="Execute">
                        <execute>conkywonky</execute>
                    </action>
                </item>
                <item label="Documentation Online">
                    <action name="Execute">
                        <execute>x-www-browser http://conky.sourceforge.net/documentation.html</execute>
                    </action>
                </item>
            </menu>
            <menu id="obConfig" label="Openbox">
                <item label="Edit menu.xml">
                    <action name="Execute">
                        <execute>cbpp-gksudo kitty nvim ~/.config/openbox/menu.xml</execute>
                    </action>
                </item>
                <item label="Edit rc.xml">
                    <action name="Execute">
                        <execute>cbpp-gksudo kitty nvim ~/.config/openbox/rc.xml</execute>
                    </action>
                </item>
                <item label="Edit autostart">
                    <action name="Execute">
                        <execute>cbpp-gksudo kitty nvim ~/.config/openbox/autostart</execute>
                    </action>
                </item>
                <separator />
                <item label="Reconfigure">
                    <action name="Reconfigure" />
                </item>
                <item label="Restart">
                    <action name="Restart" />
                </item>
            </menu>
            <menu id="tint2config" label="tint2">
                <item label="Edit config file">
                    <action name="Execute">
                        <execute>cbpp-gksudo kitty nvim ~/.config/tint2/tint2rc</execute>
                    </action>
                </item>
                <item label="Restart tint2">
                    <action name="Execute">
                        <execute>tint2restart</execute>
                    </action>
                </item>
                <item label="Online Help">
                    <action name="Execute">
                        <execute>x-www-browser http://code.google.com/p/tint2/wiki/Welcome</execute>
                    </action>
                </item>
            </menu>
            <menu id="DisplaySettings" label="Display Settings">
                <item label="ARandR Screen Layout Editor">
                    <action name="Execute">
                        <execute>arandr</execute>
                    </action>
                </item>
            </menu>
            <item label="Edit Default Applications">
                <action name="Execute">
                    <execute>cbpp-gksudo kitty update-alternatives --all</execute>
                </action>
            </item>
            <item label="User Interface Settings">
                <action name="Execute">
                    <execute>lxappearance</execute>
                </action>
            </item>
            <item label="Bluetooth Manager">
                <action name="Execute">
                    <execute>blueman-manager</execute>
                </action>
            </item>
            <item label="Power Management">
                <action name="Execute">
                    <execute>mate-power-preferences</execute>
                </action>
            </item>
            <item label="Print Settings">
                <action name="Execute">
                    <execute>system-config-printer</execute>
                </action>
            </item
        </menu>
        <menu id="system" label="System">
            <item label="GParted">
                <action name="Execute">
                    <execute>cbpp-gksudo gparted</execute>
                </action>
            </item>
            <item label="Task Manager (htop)">
                <action name="Execute">
                    <execute>kitty htop</execute>
                </action>
            </item>
        </menu>
        <menu id="help" label="Help" execute="cbpp-help-pipemenu" />
        <separator />
        <item label="Lock Screen">
            <action name="Execute">
                <execute>slock</execute>
            </action>
        </item>
	<menu id="ExitPipeMenu" label="Exit" execute="cbpp-exit"  />
    </menu>
</openbox_menu>
