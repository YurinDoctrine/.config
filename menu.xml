		<menu id="office" label="Office">
			<menu execute="cbpp-libreoffice-pipemenu" id="libreoffice" label="LibreOffice"/>
			<item label="Google Docs">
				<action name="Execute">
					<execute>x-www-browser https://drive.google.com/</execute>
