					<execute>x-terminal-emulator -e sudo update-alternatives --all</execute>
				</action>
			</item>
			<item label="User Interface Settings">
				<action name="Execute">
					<execute>lxappearance</execute>
				</action>
			</item>
			<item label="Power Management">
