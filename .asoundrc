# Direct Hardware Configuration (No software sample rate conversions)
#!pcm.!default {
# type hw
# card 0
#}

# Configuration for Firefox/LMMS
!pcm.!default {
 type plug
slave.pcm {
 type hw
 card 0
}
hint.device 0
}

!ctl.!default {
	@args [ CARD ]
	@args.CARD {
		type string
		default {
			@func getenv
			vars [
				ALSA_CTL_CARD
				ALSA_CARD
			]
			default {
				@func refer
				name defaults.ctl.card
			}
		}
	}
	type hw
	card $CARD
	hint.description "Direct control device"
}
